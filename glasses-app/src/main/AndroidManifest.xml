<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Internet for debug WebSocket mode -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Bluetooth for CXR-S communication -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />

    <!-- Camera for screenshots -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Audio: voice recognition is handled on the phone, not the glasses -->

    <!-- Keep display active -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.bluetooth_le" android:required="true" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <application
        android:name=".GlassesApp"
        android:allowBackup="false"
        android:label="@string/app_name"
        android:theme="@style/Theme.GlassesHUD">

        <activity
            android:name=".HudActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.GlassesHUD">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Service to receive data from phone -->
        <service
            android:name=".service.PhoneConnectionService"
            android:exported="false" />

    </application>

</manifest>
